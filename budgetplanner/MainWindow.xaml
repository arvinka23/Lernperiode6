<Window x:Class="BudgetTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Budget Tracker" Height="350" Width="525">
    <Grid>
       
        <Label Content="Amount:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="AmountTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="100,10,0,0"/>

        <Label Content="Description:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0"/>
        <TextBox x:Name="DescriptionTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="100,50,0,0"/>

        
        <Button Content="Add Transaction" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="100,100,0,0" Click="AddTransaction_Click"/>

        
        <ListBox x:Name="TransactionListBox" HorizontalAlignment="Left" Height="150" VerticalAlignment="Top" Width="350" Margin="10,150,0,0"/>

       
        <Label x:Name="TotalLabel" Content="Total: $0" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,320,0,0"/>
    </Grid>
</Window>
